<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
	<th>Кампания</th>
	<th>Показы</th>
	<th>Клики</th>
	<th>Цена(расход)</th>
      </tr>
    </thead>
    <tbody>
      <tr id="total_string">
	<td class="model_name">Total</td>
	<td><%= Keyword.total_impressions %></td>
	<td><%= Keyword.total_clicks %></td>
	<td><%= Keyword.total_bid %></td>
      </tr>
      <% @campaigns.each do |campaign| %>
	<tr data-toggle="collapse" href="#collapse_<%= campaign.id %>">
	  <td class="model_name"><%= campaign.name %></td>
	  <td><%= campaign.impressions_sum %></td>
	  <td><%= campaign.clicks_sum %></td>
	  <td><%= campaign.bid_sum %></td>
	</tr>
	<tr class="collapse" id="collapse_<%= campaign.id %>">
	  <td class="collapse_container" colspan="4">
	    <table class="table">
	      <tbody>
		<% campaign.keywords.each do |keyword| %>
		  <tr class="active">
		    <td class="model_name"><%= keyword.name %></td>
		    <td><%= keyword.impressions %></td>
		    <td><%= keyword.clicks %></td>
		    <td><%= keyword.bid %></td>
		  </tr>
		<% end %>
	      </tbody>
	    </table>
	  </td>
	</tr>
      <% end %>
    </tbody>
  </table>
</div>
